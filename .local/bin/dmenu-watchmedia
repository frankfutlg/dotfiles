#!/bin/bash

function watchmedia {
  options="Cancel\nAnime\nYouTube"
	selected=$(echo -e $options | dmenu -p Watch:)
  if [[ $selected = "Cancel" ]]; then
            return
  elif [[ $selected = "Anime" ]]; then
            st -T 'Watch Anime ï¢€' ani-cli
  elif [[ $selected = "YouTube" ]]; then
            ytfzf -D -l
  fi
}


watchmedia
